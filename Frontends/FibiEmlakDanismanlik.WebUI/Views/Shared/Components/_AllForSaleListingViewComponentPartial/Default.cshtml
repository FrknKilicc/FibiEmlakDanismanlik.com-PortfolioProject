@model FibiEmlakDanismanlik.WebUI.Models.ForSaleListingPageVm

<!--Page Title-->
<section class="page-title centred" style="background-image: url(https://images.stockcake.com/public/e/3/0/e30fd6b9-27e3-4bf8-95ff-ba161c9d5931_large/real-estate-transaction-stockcake.jpg);">
    <div class="auto-container">
        <div class="content-box clearfix">
            <h1>Satılık İlanlar</h1>
            <ul class="bread-crumb clearfix">
                <li><a href="@Url.Action("Index","UILayout")">Anasayfa</a></li>
                <li>Satılık İlanlar</li>
            </ul>
        </div>
    </div>
</section>
<section class="property-page-section property-grid" style="padding:50px!important;">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-4 col-md-12 col-sm-12 sidebar-side">
                <div class="default-sidebar property-sidebar">

                    <div id="forSaleFilterRoot" data-api="@ViewBag.ApiUrl"></div>

                    <!-- PROPERTY -->
                    <div class="filter-widget sidebar-widget">
                        <div class="widget-title"><h5>İlan Türü</h5></div>
                        <div class="widget-content">
                            <ul class="filter-list clearfix" id="listingTypeFilter">
                                @foreach (var t in Model.ListingTypeFacets)
                                {
                                    <li class="filter-option @(t.Selected ? "active" : "")" data-id="@t.ListingTypeId">
                                        <span class="filter-name">@t.Name</span>
                                        <span class="filter-count">(@t.Count)</span>
                                    </li>
                                }
                            </ul>

                           
                        </div>
                    </div>

                    <!-- LOKASYON -->
                    <div class="filter-widget sidebar-widget">
                        <div class="widget-title"><h5>Lokasyon</h5></div>
                        <div class="widget-content">
                            <div class="form-group">
                                <label>Şehir</label>
                                <select id="citySelect" class="wide" data-selected-id="@Model.CityId">
                                    <option value="">Şehir seç</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>İlçe</label>
                                <select id="districtSelect" class="wide" data-selected-id="@Model.DistrictId" >
                                    <option value="">İlçe seç</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Mahalle</label>
                                <select id="neighborhoodSelect" class="wide" data-selected-id="@Model.NeighborhoodId" >
                                    <option value="">Mahalle seç</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <!-- FİYAT -->
                    <div class="filter-widget sidebar-widget">
                        <div class="widget-title"><h5>Fiyat</h5></div>
                        <div class="widget-content">
                            <div class="row clearfix">
                                <div class="col-6">
                                    <input id="minPrice" type="number" class="form-control" placeholder="Min"
                                           value="@(Model.MinPrice?.ToString() ?? "")" />
                                </div>
                                <div class="col-6">
                                    <input id="maxPrice" type="number" class="form-control" placeholder="Max"
                                           value="@(Model.MaxPrice?.ToString() ?? "")" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ODA -->
                    <div class="filter-widget sidebar-widget">
                        <div class="widget-title"><h5>Oda</h5></div>
                        <div class="widget-content">
                            <select id="roomSelect" class="wide" data-selected="@Model.NumberOfRoom">
                                <option value="">Seç</option>
                                <option value="1+0">1+0</option>
                                <option value="1+1">1+1</option>
                                <option value="2+1">2+1</option>
                                <option value="3+1">3+1</option>
                                <option value="4+1">4+1</option>
                            </select>
                        </div>
                    </div>
                    <div class="category-widget sidebar-widget">
                        <div class="widget-title">
                            <h5>Amenities</h5>
                        </div>
                        <ul class="category-list clearfix">
                            <li><a href="property-details.html">Air Conditioning <span>(17)</span></a></li>
                            <li><a href="property-details.html">Central Heating <span>(4)</span></a></li>
                            <li><a href="property-details.html">Cleaning Service <span>(12)</span></a></li>
                            <li><a href="property-details.html">Dining Room <span>(8)</span></a></li>
                            <li><a href="property-details.html">Dishwasher <span>(5)</span></a></li>
                            <li><a href="property-details.html">Dishwasher <span>(2)</span></a></li>
                            <li><a href="property-details.html">Family Room <span>(19)</span></a></li>
                            <li><a href="property-details.html">Onsite Parking <span>(11)</span></a></li>
                            <li><a href="property-details.html">Fireplace <span>(7)</span></a></li>
                            <li><a href="property-details.html">Hardwood Flows <span>(9)</span></a></li>
                        </ul>
                    </div>
                    <button type="button" id="applyFilters" class="theme-btn btn-one w-100 mt-3">
                        Filtrele
                    </button>
                </div>
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 content-side">
                <div class="property-content-side">
                    <div class="item-shorting clearfix">
                        <div class="left-column pull-left">
                        <h5>Sonuç: <span>@Model.Items.Count ilan bulundu</span></h5>
                        </div>
                        <div class="right-column pull-right clearfix">
                            <div class="short-box clearfix">
                                <div class="select-box">
                                    <select class="wide">
                                        <option data-display="Sort by: Newest">Sort by: Newest</option>
                                        <option value="1">New Arrival</option>
                                        <option value="2">Top Rated</option>
                                        <option value="3">Offer Place</option>
                                        <option value="4">Most Place</option>
                                    </select>
                                </div>
                            </div>
                            <div class="short-menu clearfix">
                                <button class="list-view "><i class="icon-35"></i></button>
                                <button class="grid-view on"><i class="icon-36"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="wrapper grid">
                        <div class="deals-list-content list-item">
                            <div class="deals-block-one">
                                <div class="inner-box">
                                    <div class="image-box">
                                        <figure class="image"><img src="assets/images/resource/deals-3.jpg" alt=""></figure>
                                        <div class="batch"><i class="icon-11"></i></div>
                                        <span class="category">Featured</span>
                                        <div class="buy-btn"><a href="property-details.html">For Buy</a></div>
                                    </div>
                                    <div class="lower-content">
                                        <div class="title-text"><h4><a href="property-details.html">Villa on Grand Avenue</a></h4></div>
                                        <div class="price-box clearfix">
                                            <div class="price-info pull-left">
                                                <h6>Start From</h6>
                                                <h4>$30,000.00</h4>
                                            </div>
                                            <div class="author-box pull-right">
                                                <figure class="author-thumb">
                                                    <img src="assets/images/feature/author-1.jpg" alt="">
                                                    <span>Michael Bean</span>
                                                </figure>
                                            </div>
                                        </div>
                                        <p>Lorem ipsum dolor sit amet consectetur adipisicing sed eiusm do tempor incididunt labore.</p>
                                        <ul class="more-details clearfix">
                                            <li><i class="icon-14"></i>3 Beds</li>
                                            <li><i class="icon-15"></i>2 Baths</li>
                                            <li><i class="icon-16"></i>600 Sq Ft</li>
                                        </ul>
                                        <div class="other-info-box clearfix">
                                            <div class="btn-box pull-left"><a href="property-details.html" class="theme-btn btn-two">See Details</a></div>
                                            <ul class="other-option pull-right clearfix">
                                                <li><a href="property-details.html"><i class="icon-12"></i></a></li>
                                                <li><a href="property-details.html"><i class="icon-13"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                                <div class="inner-box">
                                    <div class="image-box">
                                        <figure class="image"><img src="assets/images/resource/deals-7.jpg" alt=""></figure>
                                        <div class="batch"><i class="icon-11"></i></div>
                                        <span class="category">Featured</span>
                                        <div class="buy-btn"><a href="property-details.html">For Buy</a></div>
                                    </div>
                                    <div class="lower-content">
                                        <div class="title-text"><h4><a href="property-details.html">Apartment in Glasgow</a></h4></div>
                                        <div class="price-box clearfix">
                                            <div class="price-info pull-left">
                                                <h6>Start From</h6>
                                                <h4>$40,000.00</h4>
                                            </div>
                                            <div class="author-box pull-right">
                                                <figure class="author-thumb">
                                                    <img src="assets/images/feature/author-1.jpg" alt="">
                                                    <span>Michael Bean</span>
                                                </figure>
                                            </div>
                                        </div>
                                        <p>Lorem ipsum dolor sit amet consectetur adipisicing sed eiusm do tempor incididunt labore.</p>
                                        <ul class="more-details clearfix">
                                            <li><i class="icon-14"></i>3 Beds</li>
                                            <li><i class="icon-15"></i>2 Baths</li>
                                            <li><i class="icon-16"></i>600 Sq Ft</li>
                                        </ul>
                                        <div class="other-info-box clearfix">
                                            <div class="btn-box pull-left"><a href="property-details.html" class="theme-btn btn-two">See Details</a></div>
                                            <ul class="other-option pull-right clearfix">
                                                <li><a href="property-details.html"><i class="icon-12"></i></a></li>
                                                <li><a href="property-details.html"><i class="icon-13"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                        </div> @* Burası list-view için kullanılabilir  foreach döndürürek list-view js ile on yapılma seçeneği ile liste görünümüne geçilebilir *@
                        <div class="deals-grid-content grid-item">
                            <div class="row clearfix">
                                @foreach(var item in Model.Items)
                                {
                                    <div class="col-lg-6 col-md-6 col-sm-12 feature-block">
                                        <div class="feature-block-one">
                                            <div class="inner-box">
                                                <div class="image-box">
                                                    <figure class="image"><img src="@item.PropImgUrl1" alt="image"></figure>
                                                    <div class="batch"><i class="icon-11"></i></div>
                                                    <span class="category">Featured</span>
                                                </div>
                                                <div class="lower-content">
                                                    <div class="author-info clearfix">
                                                        <div class="author pull-left">
                                                            <figure class="author-thumb"><img src="@item.AgentImgUrl" alt=""></figure>
                                                            <h6>@item.AgentName</h6>
                                                        </div>
                                                        <div class="buy-btn pull-right"><a href="property-details.html">For Buy</a></div>
                                                    </div>
                                                    <div class="title-text"><h4><a asp-action="Index" asp-controller="AllForSaleDetailPageController" asp-route-id="@item.ListingId">@item.PropertyName</a></h4></div>
                                                    <div class="price-box clearfix">
                                                        <div class="price-info pull-left">
                                                            <h6>Fiyat</h6>
                                                            <h4>@item.Price.ToString("N0") TL</h4>
                                                        </div>
                                                        <ul class="other-option pull-right clearfix">
                                                            <li><a href="property-details.html"><i class="icon-12"></i></a></li>
                                                            <li><a href="property-details.html"><i class="icon-13"></i></a></li>
                                                        </ul>
                                                    </div>
                                                    <p>@item.PropertyDescription</p>
                                                    <ul class="more-details clearfix">
                                                        <li><i class="icon-14"></i>3 Beds</li>
                                                        <li><i class="icon-15"></i>2 Baths</li>
                                                        <li><i class="icon-16"></i>600 Sq Ft</li>
                                                    </ul>
                                                    <div class="btn-box"><a asp-route-id="@item.ListingId" asp-controller="AllForSaleDetailPage" asp-action="Index" class="theme-btn btn-two">İlan Detayı</a></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                             
                            </div>
                        </div>
                    </div>
                    <div class="pagination-wrapper">
                        <ul class="pagination clearfix">
                            <li><a href="property-grid.html" class="current">1</a></li>
                            <li><a href="property-grid.html">2</a></li>
                            <li><a href="property-grid.html">3</a></li>
                            <li><a href="property-grid.html"><i class="fas fa-angle-right"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #listingTypeFilter .filter-option {
        cursor: pointer;
        transition: all .15s ease;
        border: 1px solid #e9ecef;
        padding: 12px 14px;
        border-radius: 10px;
        margin-bottom: 10px;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        #listingTypeFilter .filter-option:hover {
            border-color: #22c55e;
        }

        #listingTypeFilter .filter-option.active {
            background: #22c55e !important;
            border-color: #22c55e !important;
            color: #fff !important;
        }

            #listingTypeFilter .filter-option.active .filter-name,
            #listingTypeFilter .filter-option.active .filter-count {
                color: #fff !important;
            }

        #listingTypeFilter .filter-option.active {
            background: #22c55e !important;
            border-color: #22c55e !important;
            color: #fff !important;
        }

            #listingTypeFilter .filter-option.active * {
                color: #fff !important;
            }

    .nice-select .list {
        max-height: 240px;
        overflow-y: auto;
    }


</style>

